{
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 2
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "12h",
        "Limit": 1000
      },
      {
        "Endpoint": "*",
        "Period": "7d",
        "Limit": 10000
      },
      {
        "Endpoint": "*:/api/account/mail/confirmation",
        "Period": "1h",
        "Limit": 2
      },
      {
        "Endpoint": "*:/api/account/confirmation",
        "Period": "1h",
        "Limit": 1
      }
    ]
  }
}